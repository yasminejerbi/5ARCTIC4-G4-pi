{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "containerGroupName": {
      "type": "string",
      "defaultValue": "clubhub-cluster",
      "metadata": {
        "description": "Container Group name."
      }
    }
  },
  "resources": [
    {
      "name": "[parameters('containerGroupName')]",
      "type": "Microsoft.ContainerInstance/containerGroups",
      "apiVersion": "2019-12-01",
      "location": "southafricanorth",
      "properties": {
        "containers": [
          {
            "name": "clubhubcontainerback",
            "properties": {
              "image": "espritarctic.azurecr.io/pi-back:v1.0",
              "ports": [
                {
                  "port": 9000
                }
              ],
              "resources": {
                "requests": {
                  "cpu": 2,
                  "memoryInGB": 4
                }
              },
              "environmentVariables": [
                {
                  "name": "MYSQL_HOST",
                  "value": "club-server-db.mysql.database.azure.com"
                },
                {
                  "name": "MYSQL_PORT",
                  "value": "3306"
                },
                {
                  "name": "MYSQL_DB_NAME",
                  "value": "pi"
                },
                {
                  "name": "MYSQL_USER",
                  "value": "admin_clubhub"
                },
                {
                  "name": "MYSQL_PASSWORD",
                  "value": "Aze=#*154"
                }
              ]
            }
          },
          {
            "name": "clubhubcontainerfront",
            "properties": {
              "image": "espritarctic.azurecr.io/pi-front-img:v1.0",
              "ports": [
                {
                  "port": 80
                }
              ],
              "resources": {
                "requests": {
                  "cpu": 2,
                  "memoryInGB": 4
                }
              },
              "volumeMounts": [
                {
                  "name": "uploads",
                  "mountPath": "/app/uploads"
                }
              ]
            }
          }
        ],
        "volumes": [
          {
            "name": "uploads",
            "azureFile": {
              "shareName": "sharehub",
              "storageAccountName": "arcticstorage",
              "storageAccountKey": "FDbDnDTmc7ckCU+62kpdi6w40TUTuCsKFY3XPfO8NGIZoISikdtDYP+MPLc8DjntgKQJxzuM4r1O+AStpdZ9Mw=="
            }
          }
        ],
        "osType": "Linux",
        "imageRegistryCredentials": [
          {
            "server": "espritarctic.azurecr.io",
            "username": "espritarctic",
            "password": "3O1uESlHYKKuilIe4V/gdNTW38qbbAOzvRYs7Gtmtu+ACRDBjzmB"
          }
        ],
        "ipAddress": {
          "type": "Public",
          "ports": [
            {
              "protocol": "tcp",
              "port": 80
            },
            {
              "protocol": "tcp",
              "port": 9000
            }
          ]
        }
      }
    }
  ],
  "outputs": {
    "containerIPv4Address": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.ContainerInstance/containerGroups/', parameters('containerGroupName'))).ipAddress.ip]"
    }
  }
}
